#!/usr/bin/env zsh

# Gemini command proxy function.
# Checks for @google/gemini-cli package and installs if needed.
# Acts as transparent proxy to the actual gemini command.

_gemini_check_nodejs_version() {
    if ! command -v node >/dev/null 2>&1; then
        echo "Error: Node.js is not installed. Please install Node.js version 20 or higher." >&2
        return 1
    fi
    
    if ! command -v npm >/dev/null 2>&1; then
        echo "Error: npm is not available. Please ensure npm is installed and in your PATH." >&2
        return 1
    fi
    
    local node_version
    node_version=$(node --version 2>/dev/null | sed 's/^v//')
    
    if [[ -z "$node_version" ]]; then
        echo "Error: Could not determine Node.js version." >&2
        return 1
    fi
    
    local major_version
    major_version=$(echo "$node_version" | cut -d. -f1)
    
    if [[ "$major_version" -lt 20 ]]; then
        echo "Error: Node.js version $node_version is too old. Please install Node.js version 20 or higher." >&2
        return 1
    fi
    
    return 0
}

_gemini_is_installed() {
    local gemini_pkg="$1"
    npm list -g "$gemini_pkg" >/dev/null 2>&1
}

_gemini_prompt_install() {
    local gemini_pkg="$1"
    echo "The $gemini_pkg npm package is not installed."
    echo -n "Would you like to install it globally? (y/N): "
    read -r response
    case "$response" in
        [yY]|[yY][eE][sS])
            return 0
            ;;
        *)
            return 1
            ;;
    esac
}

_gemini_install_package() {
    local gemini_pkg="$1"
    echo "Installing $gemini_pkg globally..."
    if npm install -g "$gemini_pkg"; then
        echo "Successfully installed $gemini_pkg"
        return 0
    else
        echo "Failed to install $gemini_pkg" >&2
        return 1
    fi
}

# Main gemini function - this gets redefined to be the actual function.
gemini() {
    local gemini_pkg="@google/gemini-cli"
    
    if ! _gemini_check_nodejs_version; then
        return 1
    fi
    
    if ! _gemini_is_installed "$gemini_pkg"; then
        if _gemini_prompt_install "$gemini_pkg"; then
            if ! _gemini_install_package "$gemini_pkg"; then
                echo "Installation failed. Exiting." >&2
                return 1
            fi
        else
            echo "Installation declined. Exiting."
            return 0
        fi
    fi

    # Run the actual gemini command with all passed arguments and handle errors
    command gemini "$@"
    local exit_code=$?
    if [ $exit_code -ne 0 ]; then
        echo "Error: Gemini command failed with exit code $exit_code" >&2
        return $exit_code
    fi
}

# Run the function with the current arguments.
gemini "$@"